{
    "name": "live-hints",
    "version": "1.0.0",
    "description": "Windows desktop overlay для транскрипции системного звука и генерации подсказок",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "test": "jest --coverage",
        "test:unit": "jest tests/unit",
        "test:e2e": "playwright test",
        "perf": "node tests/perf/perf.test.js",
        "python:install": "pip install -r python/requirements.txt",
        "python:stt": "python python/stt_server.py",
        "python:llm": "python python/llm_server.py",
        "setup": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1"
    },
    "keywords": [
        "electron",
        "overlay",
        "transcription",
        "whisper",
        "llm"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "electron": "^28.0.0",
        "jest": "^29.7.0",
        "playwright": "^1.40.0"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "uuid": "^9.0.0",
        "ws": "^8.14.0"
    }
}